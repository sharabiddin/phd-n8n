# Basic Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# Host Configuration
N8N_HOST=your-app-name.herokuapp.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-app-name.herokuapp.com/

# Timezone
GENERIC_TIMEZONE=UTC

# Database Configuration (Heroku will auto-populate these)
DATABASE_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=
DB_POSTGRESDB_HOST=
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=
DB_POSTGRESDB_PASSWORD=
DB_POSTGRESDB_SCHEMA=public

# Security Keys (Generate secure random strings)
N8N_ENCRYPTION_KEY=your_32_character_encryption_key
N8N_USER_MANAGEMENT_JWT_SECRET=your_jwt_secret_key

# Optional: Email Configuration
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=
N8N_SMTP_PORT=587
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER=

# Optional: Editor Configuration
N8N_EDITOR_BASE_URL=